<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".volunteer_signup"
    tools:ignore="ExtraText">

    <EditText
        android:id="@+id/nameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Your Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="106dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Your Age"
        android:inputType="number" />


    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="Volunteer's Sign-up Portal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="143dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="432dp"
        android:text="SUBMIT"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameId"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="344dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Your Mobile No."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameId"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameId"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Your Gender"
        android:inputType="textPersonName" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner

        android:id="@+id/choice_camp"
        android:layout_width="213dp"
        android:layout_height="44dp"
        android:layout_alignStart="@+id/nameId"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="287dp"
        android:hint="Please select a camp" />



</RelativeLayout>