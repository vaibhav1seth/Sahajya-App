<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaibhav.sahajya">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    //android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"

            android:value="@string/google_maps_key"
            />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".emergency_help" />
        <activity android:name=".online_medical" />
        <activity android:name=".volunteer_signup" />
        <activity
            android:name=".Missing_people"
            android:label="@string/title_activity_missing_people"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MissingReport"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_missing_report"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".FoundPersonData" />
        <activity android:name=".ReliefCamp"></activity>
    </application>

</manifest>